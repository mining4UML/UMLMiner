<plugin
	id="%plugin.id"
	name="%plugin.name"
	description="%plugin.description"
	provider="%plugin.provider"
	class="com.plugin.mining.plugin.MiningPlugin">

	<runtime>
		<library path="lib" relativePath="true" />
	</runtime>

	<actionSets>
		<actionSet id="%actions.id">
			<menu
				id="Toolbar"
				label="%actions.toolbar.label"
				ribbonPath="Help"
			/>
			<action
				id="ProcessDiscovery"
				actionType="generalAction"
				label="%actions.ProcessDiscovery.label"
				tooltip="%actions.ProcessDiscovery.label"
				icon="assets/icons/lightbulb.png"
				style="normal"
				ribbonPath="Toolbar/#">
				<actionController class="com.plugin.mining.actions.ProcessDiscoveryActionController" />
			</action>
			<action
				id="ConformanceChecking"
				actionType="generalAction"
				label="%actions.ConformanceChecking.label"
				tooltip="%actions.ConformanceChecking.label"
				icon="assets/icons/test.png"
				style="normal"
				ribbonPath="Toolbar/Discovery">
				<actionController
					class="com.plugin.mining.actions.ConformanceCheckingActionController" />
			</action>
			<action
				id="ExportLogs"
				actionType="generalAction"
				label="%actions.ExportLogs.label"
				tooltip="%actions.ExportLogs.label"
				icon="assets/icons/book.png"
				style="normal"
				ribbonPath="Toolbar/ConformanceChecking">
				<actionController class="com.plugin.mining.actions.ExportLogsActionController" />
			</action>
			<separator
				id="Separator1"
				ribbonPath="Toolbar/ExportLogs" />
			<action
				id="ReloadPlugin"
				actionType="generalAction"
				label="%actions.ReloadPlugin.label"
				tooltip="%actions.ReloadPlugin.label"
				icon="assets/icons/reload.png"
				style="normal"
				ribbonPath="Toolbar/Separator1">
				<actionController class="com.plugin.mining.actions.ReloadPluginActionController" />
			</action>
			<separator
				id="Separator2"
				ribbonPath="Toolbar/ReloadPlugin" />
			<action
				id="About"
				actionType="generalAction"
				label="%actions.About.label"
				tooltip="%actions.About.label"
				icon="assets/images/logoCircle.png"
				style="normal"
				ribbonPath="Toolbar/Separator2">
				<actionController class="com.plugin.mining.actions.AboutActionController" />
			</action>
		</actionSet>
	</actionSets>

</plugin>
