<plugin
	id="%plugin.id"
	name="%plugin.name"
	description="%plugin.description"
	provider="%plugin.provider"
	class="com.plugin.mining.plugin.MiningPlugin">

	<runtime>
		<library path="lib" relativePath="true" />
	</runtime>

	<actionSets>
		<actionSet id="%actions.id">
			<menu
				id="Toolbar"
				label="%actions.toolbar.label"
				ribbonPath="Help"
			/>
			<action
				id="Discovery"
				actionType="generalAction"
				label="%actions.Discovery.label"
				tooltip="%actions.Discovery.label"
				icon="icons/lightbulb.png"
				style="normal"
				ribbonPath="Toolbar/#">
				<actionController class="com.plugin.mining.actions.DiscoveryController" />
			</action>
			<action
				id="ConformanceChecking"
				actionType="generalAction"
				label="%actions.ConformanceChecking.label"
				tooltip="%actions.ConformanceChecking.label"
				icon="icons/test.png"
				style="normal"
				ribbonPath="Toolbar/Discovery">
				<actionController class="com.plugin.mining.actions.ConformanceCheckingController" />
			</action>
			<action
				id="ExportLogs"
				actionType="generalAction"
				label="%actions.ExportLogs.label"
				tooltip="%actions.ExportLogs.label"
				icon="icons/book.png"
				style="normal"
				ribbonPath="Toolbar/ConformanceChecking">
				<actionController class="com.plugin.mining.actions.ExportLogsController" />
			</action>
			<separator
				id="Separator1"
				ribbonPath="Toolbar/ExportLogs" />
			<action
				id="ReloadPlugin"
				actionType="generalAction"
				label="%actions.ReloadPlugin.label"
				tooltip="%actions.ReloadPlugin.label"
				icon="icons/reload.png"
				style="normal"
				ribbonPath="Toolbar/Separator1">
				<actionController class="com.plugin.mining.actions.ReloadPluginActionController" />
			</action>
		</actionSet>
	</actionSets>

</plugin>
